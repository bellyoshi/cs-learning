<Window x:Class="ListReactiveProperty.Windows.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListReactiveProperty.Windows"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:ListReactiveProperty.ViewModels"
        Title="SettingWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:SettingViewModel />
    </Window.DataContext>
    

    <StackPanel>
        <!-- ラベル -->
        <Label Content="表示するディスプレイ" />

        <!-- コンボボックス -->
        <ComboBox ItemsSource="{Binding DisplayOptions}"
                  SelectedItem="{Binding SelectedDisplayOption.Value}" />

        <!-- 背景色変更ボタン -->
        <Button Content="Change Background Color" Command="{Binding ChangeColorCommand}" />

        <!-- 背景色表示用ラベル -->
        <Label Content="この色で表示" Background="{Binding BackColor.Value}" />
        <Label Content="この色で表示" Background="Black" />
    </StackPanel>
</Window>
