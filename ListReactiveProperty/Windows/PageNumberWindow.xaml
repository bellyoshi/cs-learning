<Window x:Class="ListReactiveProperty.Windows.PageNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListReactiveProperty.Windows"
                        xmlns:vm="clr-namespace:ListReactiveProperty.ViewModels"
        mc:Ignorable="d"
        Title="ページ指定" Height="100" Width="200"
             Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition>
                
            </RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="30" Grid.Row="0">
            <TextBox x:Name="PageNumberTextBox" Height="30" Width="40"/>
            <TextBlock >/</TextBlock>
            <Label x:Name="PageCountTextBox"></Label>


        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" Grid.Row="1">
            <Button Content="OK" Click="OkButton_Click"></Button>
            <Button Content="Cancel" Click="CancelButton_Click"></Button>

        </StackPanel>
    </Grid>
</Window>
