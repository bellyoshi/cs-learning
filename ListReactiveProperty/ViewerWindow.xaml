<Window x:Class="ListReactiveProperty.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListReactiveProperty"
        mc:Ignorable="d"
        Title="Window1" 
        Left="{Binding WindowLeft.Value}"
        Height="{Binding WindowHeight.Value}"
        Width="{Binding WindowWidth.Value}"
        Top= "{Binding WindowTop.Value}">
    

    <Grid>
        <Image Source="{Binding ImageSource.Value}"/>
       
    </Grid>
</Window>
