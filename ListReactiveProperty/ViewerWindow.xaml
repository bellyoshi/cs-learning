<Window x:Class="ListReactiveProperty.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListReactiveProperty"
        mc:Ignorable="d"
        Title="Window1" 
        Left="{Binding WindowLeft.Value, Mode=TwoWay}"
        Height="{Binding VirtualHeight.Value, Mode=TwoWay}" 
        MinHeight="{Binding VirtualHeight.Value}" 
        MaxHeight="{Binding VirtualHeight.Value}"
        Width="{Binding VirtualWidth.Value, Mode=TwoWay}"
        MinWidth="{Binding VirtualWidth.Value}" 
        MaxWidth="{Binding VirtualWidth.Value}"
        
        Top= "{Binding WindowTop.Value, Mode=TwoWay}">
    

    <Grid>
        <Image Source="{Binding ImageSource.Value}"/>


    </Grid>
</Window>
