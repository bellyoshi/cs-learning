<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel >
            <Label Height="30" Background="Yellow"/>
            <TextBlock Height="30" Background="red"/>
            <TextBlock Height="30" Background="Blue"/>
            <Button Height="30" />
            <StackPanel Orientation="Horizontal" Height="50" Margin="0">
                <Label Height="30" Background="Yellow"/>
                <TextBlock Height="30" Width="100" Background="red"/>
                <TextBlock Height="30" Width="100" Background="Blue"/>
                <Button Height="30" Width="100"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
