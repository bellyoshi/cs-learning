<Window x:Class="WpfApp12.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewerWindow" Height="450" Width="800"
                            xmlns:local="clr-namespace:WpfApp12"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors">
    <Grid>
        <MediaElement x:Name="viewerMediaElement" LoadedBehavior="Manual" UnloadedBehavior="Stop" Source="{Binding Source.Value}">
            <i:Interaction.Behaviors>
                <local:MediaSyncBehavior IsPlaying="{Binding IsMediaPlaying.Value}"
                                       />
            </i:Interaction.Behaviors>
        </MediaElement>
    </Grid>
</Window>