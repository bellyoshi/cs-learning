<Window x:Class="WpfApp12.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Grid>
            <MediaElement Name="mediaElement" Source="YourMediaFile.mp4" LoadedBehavior="Manual" UnloadedBehavior="Stop"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Content="Play" Click="PlayButton_Click"/>
                <Button Content="Pause" Click="PauseButton_Click"/>
                <Button Content="Open Viewer" Click="OpenViewer_Click"/>
            </StackPanel>
        </Grid>


</Window>
